<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Dob</th>
      <th>Address</th>
      <th>Workplace address</th>
      <th>Workplace</th>
      <th>Monthly net</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.firstname %></td>
        <td><%= profile.lastname %></td>
        <td><%= profile.DOB %></td>
        <td><%= profile.Address %></td>
        <td><%= profile.workplace_address %></td>
        <td><%= profile.workplace %></td>
        <td><%= profile.monthly_net %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn-box">
  <%= link_to 'New Profile', new_profile_path %>
</div>
